<head>
  <title>ShopAndJoy</title>
  <%= stylesheet_link_tag 'application' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tag %>
</head>
<body class="<%= controller.controller_name %>">
<div id="columns">
  <div id="side">
    <div id="cart">
      <% if @cart %>
          <%= hidden_div_if(@cart.line_items.empty?, id: 'cart') do %>
              <%= render @cart %> <% end %>
          <% end %>
  </div>

    <ul>
      <li><a href="">Main</a> </li>
    </ul>
  </div>

  <div id="main">
    <%= yield %>
  </div>
</div>
</body>
</html>