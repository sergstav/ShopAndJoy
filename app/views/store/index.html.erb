<% if notice %>
    <p id="notice">
      <%= notice %></p>
<% end %>

<% @products.each do |product| %>
    <div class="entry">
  <%= image_tag(product.image_url) %>
      <h3><%= product.title %></h3>
  <%= sanitize(product.description) %>
      <div class="price_line">
  Количество на складе: <span class="price"> <%= product.amount %> </span> <br />
  Цена: <span class="price"><%= number_to_currency product.price %>
  </span>
        <%= button_to 'Купить!', line_items_path(product_id: product), class: 'button', remote: true %>
      </div>
    </div>
<% end %>